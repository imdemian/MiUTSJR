<%- include("../templates/header")%>

<div class="container">
    <form action="/editarUsuario" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Editar Usuario</h1>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="hidden" name="id" id="id" value="<%= user.id %>">
                <input class="form-control mb-3" type="hidden" name="fotoAnterior" id="fotoAnterior" value="<%= user.foto %>">
                <input class="form-control mb-3" type="text"name="nombre" id="nombre" value="<%= user.nombre %>">
                <input class="form-control mb-3" type="text"name="usuario" id="usuario" value="<%= user.usuario%>"> 
                <input class="form-control mb-3" type="password"name="password" id="password" placeholder="Nueva password">
                <input class="form-control mb-3" type="hidden"name="foto2" id="foto2" value="<%= user.foto %>">
                <input class="form-control mb-3" type="file"name="foto" id="foto" placeholder="Selecciona tu foto">
            <div class="form-control mb-3">
    
            </div>
            </div> 
            <div class="card-footer">  
            <button class="btn btn-primary mb-3" type="submit">Editar Usuario</button>
            <button class="btn btn-secondary" type="reset">Limpia Campos</button>  
            </div>
        </div>
    </form>
</div>

<%- include("../templates/footer")%>


